generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  phone     String
  address   Json
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  appointments Appointment[]
  
  @@map("customers")
}

model Service {
  id        String   @id @default(cuid())
  name      String
  basePrice Decimal
  description String?
  durationMinutes Int @default(60)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  
  appointments Appointment[]
  
  @@map("services")
}

model Appointment {
  id        String   @id @default(cuid())
  customerId String
  serviceId  String
  appointmentDate DateTime
  appointmentTime String
  status    String   @default("scheduled") // scheduled, confirmed, in-progress, completed, cancelled
  price     Decimal
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  service  Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  invoice  Invoice?
  
  @@map("appointments")
}

model Invoice {
  id        String   @id @default(cuid())
  appointmentId String @unique
  invoiceNumber String @unique
  issueDate DateTime @default(now())
  dueDate   DateTime @default(dbgenerated("CURRENT_DATE + INTERVAL '30 days'"))
  subtotal  Decimal
  tax       Decimal  @default(0)
  total     Decimal
  status    String   @default("pending") // pending, paid, overdue, cancelled
  pdfUrl    String?
  createdAt DateTime @default(now())
  
  appointment Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  
  @@map("invoices")
}

model Company {
  id        String   @id @default(cuid())
  name      String
  cnpj      String?
  phone     String
  email     String
  address   Json
  bankInfo  Json?
  logoUrl   String?
  updatedAt DateTime @updatedAt
  
  @@map("company")
}

model Employee {
  id        String   @id @default(cuid())
  name      String
  email     String?  @unique
  phone     String
  cpf       String   @unique
  address   Json?
  position  String   @default("Funcionário")
  salary    Decimal? // Salário mensal fixo, se houver
  dailyRate Decimal  @default(150) // Diária padrão de R$ 150,00
  active    Boolean  @default(true)
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  workRecords EmployeeWorkRecord[]
  
  @@map("employees")
}

model EmployeeWorkRecord {
  id          String   @id @default(cuid())
  employeeId  String
  workDate    DateTime // Data do trabalho
  workDays    Int      @default(1) // Quantidade de dias trabalhados
  dailyRate   Decimal  @default(150) // Valor da diária (pode variar)
  totalAmount Decimal  // Total a pagar (workDays * dailyRate)
  notes       String?
  paid        Boolean  @default(false) // Se já foi pago
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  employee Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  
  @@map("employee_work_records")
}